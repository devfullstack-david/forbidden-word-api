  "compilerOptions": {
    "target": "ES2022",           
    "module": "NodeNext",         
    "strict": true,               
    "esModuleInterop": true,      
    "skipLibCheck": true,         
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",           
